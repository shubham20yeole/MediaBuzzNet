<!DOCTYPE html>
<html lang="en">
<head>
  <title>Documents | Webapp</title>
  <link rel="icon" href="../images/pace.jpg">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/index.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="/js/index.js"></script> 
</head>
<body>
Remobe<i class="icon-remove-circle"></i>
<div class="jumbotron text-center">
  <h1>M A N A G E - D O C U M E N T S</h1>
  <p>By: Shubham Yeole</p> 
</div>



<div class="container detailView">
  <div class="row">
    <div class="col-sm-2">
      <h3>Category</h3>
        <% documentscategory.forEach(function(documentscategory){%>
          <p class="cat-p-tag" id="<%= documentscategory.catname %>"><%= documentscategory.catname %> <%= documentscategory.size %></p>
        <%})%>
    </div>
    <div class="col-sm-2">
      <h3>Items</h3>
      <div id="load"></div>
      <div id="items"></div>
    </div>
    <div class="col-sm-6">
      <h3>View</h3>
      <div id="load1"></div>        
      <div id="iframediv"></div>
      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris...</p>
    </div>
     <div class="col-sm-2">
      <h3>Timeline:</h3>
       
        <% documents.forEach(function(documents){%>
          <div class="row">
            <div class="col-sm-5">
              <img class="img-thumbnail" src="<%= documents.thumbnail %>" width="100" height="100">
            </div>
            <div class="col-sm-7">
              <p class="itemname"><%= documents.name %></p><input type="hidden" value="<%= documents.frame %>">
            </div>
          </div>

        <%})%>
    </div>
  </div>
</div>
<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-6 col-md-offset-4" style="background: white">
          <h3>UPLOAD FILES</h3>
          <span id="sel-hide-cat">
            
          <select class="select">
            <option value="default">Select Category</option>
              <% documentscategory.forEach(function(documentscategory){%>
                <option value="<%= documentscategory.catname %>"><%= documentscategory.catname %></option>
              <%})%>
          </select></span>
          <button type="button" id="add-cat" class="btn">Add New Category</button>

          <span id="add-hide-cat"><input type="text" name="category" id="cat-write" placeholder="Enter category name"></span>
          <button type="button" id="sel-cat" class="btn">Select Category</button>
          
          <hr>
              <button class="add_field_button btn btn-primary">Attach More Files</button>
              <form method="post" action="/uploadsinglefile" id="uploadform" enctype="multipart/form-data">
                <input type="hidden" name="finalcategory" id="final-category">
                  <div class="input_fields_wrap">
                    <div class="append">
                      <input type="file" name="file" class="file">
                      <input type="hidden" name="ext" class="ext">
                      <button type="button" class="remove_field btn btn-danger"><i class="fa fa-remove"></i> Remove</button>
                    </div>
                  </div>
                  <hr>
                <input type="submit" name="submit" class="btn btn-primary" value="Submit File">
              </form>
        </div>
    </div>
</div>
</body>
</html>
        
